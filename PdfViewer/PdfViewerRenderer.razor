@using DevExpress.Blazor.PdfViewer

<DxPdfViewer @ref="dxPdfViewer"
             CssClass="@ComponentModel.CssClass"
             IsSinglePagePreview="true"
             DocumentContent="@ComponentModel.DocumentContent" />

@code {
    private DxPdfViewer dxPdfViewer;

    [Parameter]
    public PdfViewerModel ComponentModel { get; set; }

    public static RenderFragment Create(PdfViewerModel componentModel) => @<PdfViewerRenderer ComponentModel=@componentModel />;
}
